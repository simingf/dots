{
  // TODO: organize this
  // UI SETTINGS
  "workbench.colorTheme": "Ayu Dark",
  "workbench.iconTheme": "vscode-icons",
  "window.title": " ",
  "window.commandCenter": false,
  // Editor Actions
  "workbench.editor.editorActionsLocation": "hidden",
  // Tabs
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,
  // "workbench.layoutControl.type": "menu",
  // Breadcrumbs
  "breadcrumbs.enabled": false,
  // Status Bar
  "workbench.statusBar.visible": true,
  // Activity Bar / Sidebar
  // "workbench.activityBar.location": "hidden",
  // "workbench.activityBar.orientation": "vertical",
  "workbench.sideBar.location": "right",
  // Minimap
  "editor.minimap.enabled": false,
  // Overview Ruler
  // "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  // Scrollbars
  "editor.scrollbar.horizontal": "hidden",
  // "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 14,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.tree.indent": 16, // default (8)
  "workbench.tree.renderIndentGuides": "none",
  "explorer.decorations.colors": false,
  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.inheritEnv": false,

  // EDITOR SETTINGS
  // Font
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 28,
  // Left Side
  // "editor.lineNumbers": "off",
  "editor.lineNumbers": "on",
  // "editor.glyphMargin": false,
  "editor.glyphMargin": true,
  // "editor.showFoldingControls": "never",
  "editor.foldingHighlight": false,
  // Padding
  "editor.padding.top": 14,
  "editor.padding.bottom": 14,
  // Word Wrap
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  // Brackets
  "editor.matchBrackets": "never",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.bracketPairsHorizontal": false,
  // Indentation Guides
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  // Smooth Cursors
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  // Active Line Highlights
  "editor.renderLineHighlight": "none",
  // Inline Suggestions
  "editor.inlineSuggest.enabled": true,
  // Hints
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",
  // Accessibility
  "editor.accessibilitySupport": "off",

  // LANGUAGE SETTINGS
  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++-14",
  "C_Cpp.default.intelliSenseMode": "macos-gcc-arm64",
  "C_Cpp.default.cppStandard": "c++20",
  "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/miniconda/base",

  // GIT SETTINGS
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,

  // EXTENSION SETTINGS
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.commandCenter.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  // Optional, automatically format your code on save
  "editor.formatOnSave": true,
  // Optional, automatically format any pasted code
  "editor.formatOnPaste": true,
  // Optional, automatically do eslint --fix on save in addition to linting
  // Set it to false if you don't want this behavior (e.g. for AngularJS code)
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Recommended, disable the above for each individual file types to avoid running VS Code's default formatter
  // and tell VS Code to use your new prettier formatter
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  // Optional, show a status icon on the lower right corner, so you can open the problem panel from there
  "eslint.alwaysShowStatus": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
  "docker.extension.enableComposeLanguageServer": false
}
