{
  // UI SETTINGS
  "workbench.colorTheme": "Ayu Dark",
  "workbench.iconTheme": "vscode-icons",
  "window.title": " ",
  "window.commandCenter": false,
  // Editor Actions
  "workbench.editor.editorActionsLocation": "hidden",
  // Tabs
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,
  // "workbench.layoutControl.type": "menu",
  // Breadcrumbs
  "breadcrumbs.enabled": false,
  // Status Bar
  "workbench.statusBar.visible": true,
  // Activity Bar / Sidebar
  // "workbench.activityBar.location": "hidden",
  // "workbench.activityBar.orientation": "vertical",
  "workbench.sideBar.location": "right",
  // Minimap
  "editor.minimap.enabled": false,
  // Overview Ruler
  // "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  // Scrollbars
  "editor.scrollbar.horizontal": "hidden",
  // "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 14,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.tree.indent": 16, // default (8)
  "workbench.tree.renderIndentGuides": "none",
  "explorer.decorations.colors": false,
  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.inheritEnv": false,

  // EDITOR SETTINGS
  // Font
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 28,
  // Left Side
  // "editor.lineNumbers": "off",
  "editor.lineNumbers": "on",
  // "editor.glyphMargin": false,
  "editor.glyphMargin": true,
  // "editor.showFoldingControls": "never",
  "editor.foldingHighlight": false,
  // Padding
  "editor.padding.top": 14,
  "editor.padding.bottom": 14,
  // Word Wrap
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  // Brackets
  "editor.matchBrackets": "never",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.bracketPairsHorizontal": false,
  // Indentation Guides
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  // Smooth Cursors
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  // Active Line Highlights
  "editor.renderLineHighlight": "none",
  // Inline Suggestions
  "editor.inlineSuggest.enabled": true,
  // Hints
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",
  // Accessibility
  "editor.accessibilitySupport": "off",

  // LANGUAGE SETTINGS
  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++-14",
  "C_Cpp.default.intelliSenseMode": "macos-gcc-arm64",
  "C_Cpp.default.cppStandard": "c++20",
  "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/miniconda/base",

  // GIT SETTINGS
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,

  // EXTENSION SETTINGS
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.commandCenter.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "yellow",
      "backgroundColor": "red"
    },
    {
      "text": "DONE",
      "color": "cyan",
      "backgroundColor": "green"
    },
    {
      "text": "HINT",
      "color": "yellow",
      "backgroundColor": "blue"
    }
  ],
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["s"],
      "commands": ["leap.findForward"]
    },
    {
      "before": ["S"],
      "commands": ["leap.findBackward"]
    }
  ]
}
