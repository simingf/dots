# disable skhd in moonlight streams
.blacklist [
    "Moonlight"
    "steamstreamingclient"
]

# alt - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance --directory ~ 
cmd + alt + ctrl + shift - return : open -a "Kitty"

## CHANGE LAYOUT
# cmd + alt + ctrl + shift - q : yabai -m space --layout stack
# cmd + alt + ctrl + shift - t : yabai -m space --layout bsp
# cmd + alt + ctrl + shift - f : yabai -m space --layout float

## FLOATING WINDOW TILING

# make floating window fill screen
cmd + alt + ctrl + shift - space : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill bottom-half of screen
# alt - j : yabai -m window --grid 2:1:0:1:1:1

# make floating window fill top-half of screen
# alt - k : yabai -m window --grid 2:1:0:0:1:1

# make floating window fill left-half of screen
# cmd + alt + ctrl + shift - n : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
# cmd + alt + ctrl + shift - m : yabai -m window --grid 1:2:1:0:1:1

## SPACES

# move to most recent space
# alt - tab : yabai -m space --focus recent;

# move to space
# alt - h: yabai -m space --focus prev || yabai -m space --focus last;
# alt - l: yabai -m space --focus next || yabai -m space --focus first;
cmd + alt + ctrl + shift - a: yabai -m space --focus prev || yabai -m space --focus last;
cmd + alt + ctrl + shift - s: yabai -m space --focus next || yabai -m space --focus first;
cmd + alt + ctrl + shift - d: yabai -m space --focus next || yabai -m space --focus first;

# alt - 1 : yabai -m space --focus 1;
# alt - 2 : yabai -m space --focus 2;
# alt - 3 : yabai -m space --focus 3;
# alt - 4 : yabai -m space --focus 4;
# alt - 5 : yabai -m space --focus 5;
# alt - 6 : yabai -m space --focus 6;
# alt - 7 : yabai -m space --focus 7;
# alt - 8 : yabai -m space --focus 8;
# alt - 9 : yabai -m space --focus 9;
# alt - 0 : yabai -m space --focus 10;

# move window to space
# ctrl + alt - q : yabai -m window --space prev || yabai -m window --space last;
# ctrl + alt - w : yabai -m window --space next || yabai -m window --space first;
# ctrl + alt - 1 : yabai -m window --space 1;
# ctrl + alt - 2 : yabai -m window --space 2;
# ctrl + alt - 3 : yabai -m window --space 3;
# ctrl + alt - 4 : yabai -m window --space 4;
# ctrl + alt - 5 : yabai -m window --space 5;
# ctrl + alt - 6 : yabai -m window --space 6;
# ctrl + alt - 7 : yabai -m window --space 7;
# ctrl + alt - 8 : yabai -m window --space 8;
# ctrl + alt - 9 : yabai -m window --space 9;
# ctrl + alt - 0 : yabai -m window --space 10;

# move window to space and follow
# shift + alt - q : yabai -m window --space prev || yabai -m window --space last; yabai -m space --focus prev || yabai -m space --focus last;
# shift + alt - w : yabai -m window --space next || yabai -m window --space first; yabai -m space --focus next || yabai -m space --focus first;
# shift + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1;
# shift + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2;
# shift + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3;
# shift + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4;
# shift + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5;
# shift + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6;
# shift + alt - 7 : yabai -m window --space  7; yabai -m space --focus 7;
